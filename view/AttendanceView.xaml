<UserControl x:Class="StudentContactApp.Views.AttendanceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <DataGrid x:Name="dataGridAttendance" AutoGenerateColumns="False" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Họ Tên" Binding="{Binding Name}" Width="200"/>
                <DataGridTextColumn Header="Lớp" Binding="{Binding Class}" Width="100"/>
                <DataGridTextColumn Header="Buổi" Binding="{Binding Date}" Width="150"/>
                <DataGridTextColumn Header="Có Mặt" Binding="{Binding Present}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>

<UserControl x:Class="StudentContactApp.Views.ScheduleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <DataGrid x:Name="dataGridSchedule" AutoGenerateColumns="False" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Thứ" Binding="{Binding Day}" Width="100"/>
                <DataGridTextColumn Header="Môn Học" Binding="{Binding Subject}" Width="200"/>
                <DataGridTextColumn Header="Giờ Học" Binding="{Binding Time}" Width="150"/>
                <DataGridTextColumn Header="Giáo Viên" Binding="{Binding FullName}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
